<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/rastimaLeit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#2d7165"
            android:layout_centerHorizontal="true"
            android:text="@string/header_rastimaleit"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_start_time"
            android:layout_alignParentLeft="true"
            android:text="Til:"
            android:layout_below="@+id/rastimaLeit_title"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:textColor="#2d7165"/>

        <Spinner
            android:id="@+id/spinner_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rastimaLeit_title"
            android:textColor="#2d7165"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/textview_start_time"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_end_time"
            android:layout_toLeftOf="@+id/spinner_end_time"
            android:text="Frá:"
            android:layout_below="@+id/rastimaLeit_title"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#2d7165"/>

        <Spinner
            android:id="@+id/spinner_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rastimaLeit_title"
            android:textColor="#2d7165"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_courses"
            android:layout_below="@+id/textview_start_time"
            android:textColor="#2d7165"
            android:textSize="17sp"
            android:text="Völlur:"
            android:layout_alignParentLeft="true"/>

        <Spinner
            android:id="@+id/courses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_courses"
            android:textColor="#2d7165"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_dates"
            android:textSize="17sp"
            android:text="Dagsetning:"
            android:layout_below="@+id/courses"
            android:layout_marginBottom="7dp"
            android:layout_alignParentLeft="true"
            android:textColor="#2d7165"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:id="@+id/dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courses"
            android:textColor="#2d7165"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_fjoldi"
            android:textSize="17sp"
            android:text="Fjöldi leikmanna:"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/textview_dates"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:textColor="#2d7165"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rl_fjoldiFraNotanda"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:hint="1"
            android:layout_below="@+id/textview_dates"
            android:layout_toRightOf="@+id/rl_fjoldi"    />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_lausirtimar"
            android:id="@+id/button_lausir_timar"
            android:layout_below="@+id/rl_fjoldi"
            android:layout_centerHorizontal="true"
            android:background="#2d7165"
            android:textColor="#FFFFFF"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</ScrollView>